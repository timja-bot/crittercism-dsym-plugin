  <!-- Repository Info -->
  <scm>
  	<connection>scm:git:ssh://github.com/jenkinsci/crittercism-dsym-plugin.git</connection>
	<developerConnection>scm:git:ssh://git@github.com/jenkinsci/crittercism-dsym-plugin.git</developerConnection>
